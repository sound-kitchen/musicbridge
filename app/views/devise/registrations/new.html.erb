<div class="container">
  <header class="sign_up_header row justify-content-center">
      <h1 class="sign_up_title">회원가입</h1>
  </header>
  
  
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="sign_up_form row justify-content-center">
    <div class="form-group col-md-10">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control col-12' } %>
    </div>
  </div>
  
  <div class="sign_up_form row justify-content-center">
    <div class="form-group col-md-10">
      <%= f.input :password, required: true, input_html: { class: 'form-control col-12' } %>
    </div>
  </div>
  
  <div class="sign_up_form row justify-content-center">
    <div class="form-group col-md-10">
      <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control col-12' } %>
    </div>
  </div>
  
  <div class="sign_up_form row justify-content-center">
    <%= f.button :submit, "Sign up", class: "btn btn-default" %>
  </div>    

      
  <% end %>
  
  <div class="sign_up_form row justify-content-center">
    <%= render "devise/shared/links", class: 'col-md-4' %>
  </div>
</div>
 
