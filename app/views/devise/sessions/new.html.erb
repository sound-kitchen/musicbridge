<!-- Small modal -->
<button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target=".bd-example-modal-sm">
  <i class="fa fa-sign-in" aria-hidden="true"> 로그인 </i> 
</button>

<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "로그인" %>
        </div>
      <% end %>
      
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "회원가입", new_registration_path(resource_name) %>
      <% end %>
      
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "비밀번호 찾기", new_password_path(resource_name) %>
      <% end %>

            
    </div>
  </div>
</div>