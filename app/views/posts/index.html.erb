<div class="container post_bg"> <!--post_bg: 임시-->
  <!--<p id="notice"><%= notice %></p>-->
  
  <h1 class="post_title my-4">모든 의뢰</h1>
  
  <table class="table table-striped table-hover post_table">
    <thead class="thead-inverse">
      <tr>
        <th class="post-thead" style="width:40%">제목</th>
        <th class="post-thead" style="width:18%">카테고리</th>
        <th class="post-thead" style="width:12%">User</th>
        <th class="post-thead" style="width:30%">조회수</th>
      </tr>
    </thead>
  
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><a href="/posts/<%= post.id %>"><%= post.title %></a></td>
          <td><%= post.category.name %></td>
          <td><%= post.user.profile.username %></td>
          <td><%#= "#{post.unique_impression_count}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  

  <% if current_user %>
    <div class="row justify-content-end mr-1">
      <%= link_to 'New Post', new_post_path, class: "btn btn-secondary" %>
    </div>
    
  <% else %>
  <% end %>
  <%= paginate @posts %>
</div>