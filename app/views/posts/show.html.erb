<div class="container">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>
  
  <p>
    <strong>Budget:</strong>
    <%= @post.budget %>
  </p>
  
  <p>
    <strong>D day:</strong>
    <%= @post.d_day %>
  </p>
  
  <p>
    <strong>Image:</strong>
    <% if @post.image.url %>
      <img src="<%= @post.image.url %>" alt="img">
    <% else %>
      <span>이미지없음</span>
    <% end %>
  </p>
  
  <p>
    <strong>User:</strong>
    <%= @post.user.email %>
  </p>
  
  <p>
    <strong>Category:</strong>
    <%= @post.category.name %>
  </p>
  
  
  <%= link_to 'Edit', edit_post_path(@post) %> | 
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  
  
  <%= link_to 'Back', posts_path %>

</div>